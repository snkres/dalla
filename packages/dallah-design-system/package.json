{
  "name": "@dallah/design-system",
  "version": "0.0.1",
  "repository": "https://github.com/mahmoudgalalz/dallah.git",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm build:swc -w",
    "build": "rimraf dist && pnpm build:swc && pnpm types",
    "build:swc": "pnpm copy-tailwind && swc src -d dist",
    "copy-tailwind": "mkdir -p dist && (rm -rf dist/tokens.js || true) && cp src/tokens.js dist/tokens.js",
    "types": "tsc --emitDeclarationOnly",
    "lint": "TIMING=1 eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rimraf ./dist && rimraf .turbo"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./*": [
      "./dist/*.js",
      "./dist/*/index.js"
    ],
    "./tailwind": {
      "require": "./dist/tailwind.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ],
      "tailwind": [
        "dist/tailwind.d.cts"
      ]
    }
  },
  "publishConfig": {
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ],
        "tailwind": [
          "dist/tailwind.d.cts"
        ]
      }
    }
  },
  "peerDependencies": {
    "next": "^14.0.0",
    "react": "^18.0.0-0",
    "react-dom": "^18.0.0-0"
  },
  "dependencies": {
    "@dallah/utils": "workspace:*",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-radio-group": "^1.2.2",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@swc/helpers": "^0.5.15",
    "@use-gesture/react": "^10.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^1.2.1",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.468.0"
  },
  "devDependencies": {
    "@storybook/react": "^7.6.20",
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.10.1",
    "@types/react": "^19.0.1",
    "chokidar": "^3.6.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.17.0",
    "eslint-config-dallah": "workspace:*",
    "rimraf": "^6.0.1",
    "typescript": "5.0.4"
  }
}
